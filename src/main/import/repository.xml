<?xml version="1.0" encoding="UTF-8"?>
<content xmlns:j="http://www.jahia.org/jahia/1.0"
         xmlns:jcr="http://www.jcp.org/jcr/1.0"
         xmlns:jnt="http://www.jahia.org/jahia/nt/1.0">
    <modules jcr:primaryType="jnt:modules">
        <serverSettings j:dependencies="default"
                      j:installedModules="serverSettings"
                      j:moduleType="module"
                      j:title="Jahia Server Settings"
                      jcr:primaryType="jnt:module">
                
            <templates j:rootTemplatePath="/" jcr:primaryType="jnt:templatesFolder">
                    <files jcr:primaryType="jnt:folder">
                        <aboutJahia.png j:height="16"
                               j:width="16"
                               jcr:mixinTypes="jmix:image"
                               jcr:primaryType="jnt:file">
                            <jcr:content jcr:mimeType="image/png" jcr:primaryType="jnt:resource"/>
                            <thumbnail jcr:mimeType="image/png" jcr:primaryType="jnt:resource"/>
                            <thumbnail2 jcr:mimeType="image/png" jcr:primaryType="jnt:resource"/>
                        </aboutJahia.png>
                    </files>
                <contents jcr:primaryType="jnt:contentFolder"/>
                    <serverSettingsBase j:view="serverSettings"
                                jcr:mixinTypes="jmix:useUILocale"
                                jcr:primaryType="jnt:template">
                        <aboutJahia j:applyOn="jnt:globalSettings"
                           j:defaultTemplate="false"
                           j:hiddenTemplate="false"
                           j:icon="/modules/serverSettings/templates/files/aboutJahia.png"
                           j:requiredPermissions="#/permissions/admin/adminAbout"
                           j:titleKey="serverSettings.aboutJahia"
                           jcr:mixinTypes="jmix:rbTitle"
                           jcr:primaryType="jnt:contentTemplate">
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <about-jahia jcr:primaryType="jnt:serverSettingsAboutJahia"/>
                        </pagecontent>
                    </aboutJahia>
                        <webProjectSettings j:applyOn="jnt:globalSettings"
                                   j:defaultTemplate="false"
                                   j:hiddenTemplate="false"
                                   j:requiredPermissions="#/permissions/admin/adminVirtualSites"
                                   j:titleKey="serverSettings.manageWebProjects"
                                   jcr:mixinTypes="jmix:rbTitle"
                                   jcr:primaryType="jnt:contentTemplate">
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <manage-web-projects jcr:primaryType="jnt:serverSettingsManageWebProjects"/>
                        </pagecontent>
                    </webProjectSettings>
                        <configurations j:hiddenTemplate="false"
                                j:titleKey="serverSettings.configurations"
                                jcr:mixinTypes="jmix:rbTitle"
                                jcr:primaryType="jnt:template">
                            <mailServerSettings j:applyOn="jnt:globalSettings"
                                      j:defaultTemplate="false"
                                      j:hiddenTemplate="false"
                                      j:requiredPermissions="#/permissions/admin/adminEmailSettings"
                                      j:titleKey="serverSettings.mailServerSettings"
                                      jcr:mixinTypes="jmix:rbTitle"
                                      jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <mailServer-settings jcr:primaryType="jnt:serverSettingsMailServerSettings"/>
                                </pagecontent>
                            </mailServerSettings>
                            <dbSettings j:applyOn="jnt:globalSettings"
                              j:defaultTemplate="false"
                              j:hiddenTemplate="false"
                              j:requiredPermissions="#/permissions/admin/adminDBSettings"
                              j:titleKey="serverSettings.dbSettings"
                              jcr:mixinTypes="jmix:rbTitle"
                              jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <db-settings jcr:primaryType="jnt:serverSettingsDBSettings"/>
                                </pagecontent>
                            </dbSettings>
                        </configurations>
                        <system-components j:hiddenTemplate="false"
                                j:titleKey="serverSettings.systemComponents"
                                jcr:mixinTypes="jmix:rbTitle"
                                jcr:primaryType="jnt:template">
                            <manageModules j:applyOn="jnt:globalSettings jnt:modules"
                                 j:defaultTemplate="false"
                                 j:hiddenTemplate="false"
                                 j:requiredPermissions="#/permissions/admin/adminTemplates"
                                 j:titleKey="serverSettings.manageModules"
                                 jcr:mixinTypes="jmix:rbTitle"
                                 jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <manage-modules jcr:primaryType="jnt:serverSettingsManageModules"/>
                                </pagecontent>
                            </manageModules>
                            <managePortlets j:applyOn="jnt:globalSettings"
                                  j:defaultTemplate="false"
                                  j:hiddenTemplate="false"
                                  j:requiredPermissions="#/permissions/admin/adminPortlets"
                                  j:titleKey="serverSettings.managePortlets"
                                  jcr:mixinTypes="jmix:rbTitle"
                                  jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <manage-portlets jcr:primaryType="jnt:serverSettingsManagePortlets"/>
                                </pagecontent>
                            </managePortlets>
                        </system-components>
                        <users-and-roles j:hiddenTemplate="false"
                                j:titleKey="serverSettings.usersAndRoles"
                                jcr:mixinTypes="jmix:rbTitle"
                                jcr:primaryType="jnt:template">
                            <manageUsers j:applyOn="jnt:globalSettings"
                               j:defaultTemplate="false"
                               j:hiddenTemplate="false"
                               j:requiredPermissions="#/permissions/admin/adminUsers"
                               j:titleKey="serverSettings.manageUsers"
                               jcr:mixinTypes="jmix:rbTitle"
                               jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <manage-users jcr:primaryType="jnt:serverSettingsManageUsers"/>
                                </pagecontent>
                            </manageUsers>
                            <adminProperties j:applyOn="jnt:globalSettings"
                                   j:defaultTemplate="false"
                                   j:hiddenTemplate="false"
                                   j:requiredPermissions="#/permissions/admin/adminRootUser"
                                   j:titleKey="serverSettings.adminProperties"
                                   jcr:mixinTypes="jmix:rbTitle"
                                   jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <admin-properties jcr:primaryType="jnt:serverSettingsAdminProperties"/>
                                </pagecontent>
                            </adminProperties>
                            <passwordPolicy j:applyOn="jnt:globalSettings"
                                  j:defaultTemplate="false"
                                  j:hiddenTemplate="false"
                                  j:requiredPermissions="#/permissions/admin/adminPasswordPolicy"
                                  j:titleKey="serverSettings.passwordPolicy"
                                  jcr:mixinTypes="jmix:rbTitle"
                                  jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <password-policy jcr:primaryType="jnt:serverSettingsPasswordPolicy"/>
                                </pagecontent>
                            </passwordPolicy>
                        </users-and-roles>
                        <system-health j:hiddenTemplate="false"
                                j:titleKey="serverSettings.systemHealth"
                                jcr:mixinTypes="jmix:rbTitle"
                                jcr:primaryType="jnt:template">
                            <systemInfos j:applyOn="jnt:globalSettings"
                               j:defaultTemplate="false"
                               j:hiddenTemplate="false"
                               j:requiredPermissions="#/permissions/admin/adminSystemInfos"
                               j:titleKey="serverSettings.systemInfos"
                               jcr:mixinTypes="jmix:rbTitle"
                               jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <system-infos jcr:primaryType="jnt:serverSettingsSystemInfos"/>
                                </pagecontent>
                            </systemInfos>
                            <cacheManagement j:applyOn="jnt:globalSettings"
                                   j:defaultTemplate="false"
                                   j:hiddenTemplate="false"
                                   j:requiredPermissions="#/permissions/admin/adminCache"
                                   j:titleKey="serverSettings.cacheManagement"
                                   jcr:mixinTypes="jmix:rbTitle"
                                   jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <cache-management jcr:primaryType="jnt:serverSettingsCacheManagement"/>
                                </pagecontent>
                            </cacheManagement>
                            <manageMemory j:applyOn="jnt:globalSettings"
                                j:defaultTemplate="false"
                                j:hiddenTemplate="false"
                                j:requiredPermissions="#/permissions/admin/adminManageMemory"
                                j:titleKey="serverSettings.manageMemory"
                                jcr:mixinTypes="jmix:rbTitle"
                                jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <manage-memory jcr:primaryType="jnt:serverSettingsManageMemory"/>
                                </pagecontent>
                            </manageMemory>
                            <reportAnIssue j:applyOn="jnt:globalSettings"
                                 j:defaultTemplate="false"
                                 j:hiddenTemplate="false"
                                 j:requiredPermissions="#/permissions/admin/adminIssueTracking"
                                 j:titleKey="serverSettings.reportAnIssue"
                                 jcr:mixinTypes="jmix:rbTitle"
                                 jcr:primaryType="jnt:contentTemplate">
                                <pagecontent jcr:primaryType="jnt:contentList">
                                    <report-an-issue jcr:primaryType="jnt:serverSettingsReportAnIssue"/>
                                </pagecontent>
                            </reportAnIssue>
                        </system-health>
                </serverSettingsBase>
            </templates>
                <portlets jcr:primaryType="jnt:portletFolder"/>
                <files jcr:primaryType="jnt:folder"/>
                <contents jcr:primaryType="jnt:contentFolder"/>
                
        </serverSettings>
    </modules>
    
</content>
